[module/power-menu]
type = custom/menu

expand-right = true
label-open = 
label-close = 

label-separator =  |

menu-0-0 = Sleep
menu-0-0-exec = /usr/bin/systemctl suspend

menu-0-1 = Reboot
menu-0-1-exec = /sbin/reboot

menu-0-2 = Shutdown
menu-0-2-exec = /sbin/poweroff

menu-0-3 = Hibernate
menu-0-3-exec = /usr/bin/systemctl hibernate

menu-0-4 = Log off
menu-0-4-exec = /usr/bin/i3-msg exit

